<Window x:Class="ScreenshotViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenshotViewer"
        mc:Ignorable="d"
        Title="Screenshot Viewer" Height="600" Width="800" WindowStartupLocation="CenterScreen" KeyDown="MainWindow_OnKeyDown" Background="#808080">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="521*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <Image x:Name="ImageBox" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0"/>
        <TextBlock x:Name="BottomPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1"/>
    </Grid>
</Window>
